<div class="container col-8 text-dark">
  <h1>Rent out your haunted doll</h1>

  <%= simple_form_for(@doll) do |f| %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :image, as: :file %>
    <%= f.submit %>
  <% end %>
</div>
