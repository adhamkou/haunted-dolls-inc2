<div class="container gradient">
  <h1>Here are all the dolls</h1>
  <%= form_with url: dolls_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a doll"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
 <%= render "shared/cards" %>
</div>

